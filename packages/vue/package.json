{
  "name": "@khyonn/dst-vue",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "dev": "vite serve dev --config vite.config.ts",
    "build": "vue-tsc --p ./tsconfig-build.json && vite build",
    "preview": "vite preview",
    "prepublishOnly": "pnpm build",
    "format": "concurrently pnpm:format:*",
    "format:prettier": "prettier --ignore-path .gitignore -w lib/* dev/*",
    "format:eslint": "eslint {lib,dev}/**/*.{js,ts,tsx,jsx} --fix",
    "lint": "concurrently pnpm:lint:*",
    "lint:code": "eslint --ignore-path .gitignore --max-warnings 0 {lib,dev}/**/*.{js,ts,tsx,jsx}",
    "lint:types": "tsc --noEmit"
  },
  "dependencies": {
    "@khyonn/dst-style": "workspace:*",
    "vue": "^3.4.21"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "@vitejs/plugin-vue": "^5.0.4",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "glob": "^10.3.10",
    "prettier": "^3.2.5",
    "typescript": "^5.4.3",
    "vite": "^5.2.6",
    "vite-plugin-dts": "^3.7.3",
    "vite-plugin-lib-inject-css": "^2.0.1",
    "vue-tsc": "^2.0.7"
  }
}
